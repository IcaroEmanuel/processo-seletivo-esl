<div class="row flex-column align-items-center">
  <div class="col-xs-12 text-center">
    <h1>Faça seu login</h1>
  </div>

  <div class="col-md-6 col-md-offset-3 col-xs-12">
    <%= form_for :session, url: login_path, method: :post do |f| %>

      <div class="form-group mt-3">
        <%= f.label :email %>
        <%= f.email_field :email, placeholder: 'Email', class: 'form-control' %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :password %>
        <%= f.password_field :password, placeholder: 'Senha', class: 'form-control' %>
      </div>

      <%= f.submit 'Entrar', class: 'btn btn-primary mt-3' %>
      <p class="mt-3">Não possui uma conta? <span><%= link_to 'Cadastre-se', new_user_path %></span></p>
    <% end %>
  </div>
</div>
