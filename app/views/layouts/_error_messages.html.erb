<% if object.errors.any? %>
  <div>
    <div class="alert alert-danger">
      Não foi possível concluir seu cadastro<br/>
      <%= pluralize(object.errors.count, 'erro', 'erros') %>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li>
            <%= msg %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>